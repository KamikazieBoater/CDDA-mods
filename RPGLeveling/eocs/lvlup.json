[
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_open_perk_menu",
    "effect": [ { "open_dialogue": { "topic": "TALK_RPGL_MENU_MAIN" } } ]
  },
  {
    "_comment": "possible exp formula to level -> lvlup = c * lvl ^ e; 50L^3 or 1000L^2?",
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_init",
    "condition": { "and": [ { "not": { "u_has_trait": "perk_perk_menu" } } ] },
    "effect": [
      { "math": [ "u_rpgl_exp_to_level = 100" ] },
      { "math": [ "u_rpgl_exp_const = 50" ] },
      { "math": [ "u_rpgl_exp_exponent = 3" ] },
      { "math": [ "u_rpgl_exp_current = 0" ] },
      { "math": [ "u_rpgl_level = 0" ] },
      { "math": [ "u_rpgl_max_level = 20" ] },
      { "math": [ "u_rpgl_points = 0" ] },
      { "math": [ "u_rpgl_silent = 0" ] },
      { "u_add_trait": "perk_perk_menu" }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_str",
    "effect": [ { "math": [ "u_val_ass('strength_base', u_val('strength_base') + 1)" ] } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_dex",
    "effect": [ { "math": [ "u_val_ass('dexterity_base', u_val('dexterity_base') + 1)" ] } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_int",
    "effect": [ { "math": [ "u_val_ass('intelligence_base', u_val('intelligence_base') + 1)" ] } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_per",
    "effect": [ { "math": [ "u_val_ass('perception_base', u_val('perception_base') + 1)" ] } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_spend_exp",
    "effect": [
      { "math": [ "u_val_ass('exp', u_val('exp') - u_rpgl_exp_to_level)" ] },
      { "math": [ "u_rpgl_level++" ] },
      { "math": [ "u_rpgl_exp_to_level = u_rpgl_exp_const * (u_rpgl_level + 1) ^ u_rpgl_exp_exponent" ] }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_on_kill_update",
    "eoc_type": "EVENT",
    "required_event": "character_kills_monster",
    "effect": [ { "math": [ "u_rpgl_exp_current = u_val('exp')" ] }, { "run_eocs": "EOC_rpgl_level_up" } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_up",
    "condition": {
      "and": [ { "math": [ "u_rpgl_exp_current > u_rpgl_exp_to_level" ] }, { "math": [ "u_rpgl_level < u_rpgl_max_level" ] } ]
    },
    "effect": [
      { "math": [ "u_rpgl_points++" ] },
      { "math": [ "u_rpgl_level++" ] },
      { "math": [ "u_rpgl_exp_to_level = u_rpgl_exp_const * (u_rpgl_level + 1) ^ u_rpgl_exp_exponent" ] },
      { "run_eocs": "EOC_rpgl_level_up_notification" }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_rpgl_level_up_notification",
    "condition": { "math": [ "u_rpgl_silent != 1" ] },
    "effect": [ { "open_dialogue": { "topic": "TALK_RPGL_MENU_MAIN" } } ]
  }
]
